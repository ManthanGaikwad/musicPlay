<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <link rel="Shortcut Icon" type="image/jpg" href="/public/Images/music-1.jpg">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />

  <style>
    *{
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
   
    a {
      text-decoration: none;
    }
  </style>
</head>

<body>
  <% if(typeof message !=='undefined' ){ %>

    <p class="text-center mt-2">
      <%= message %>
    </p>

    <% } %>
      <div class="container">
        <div class="row my-5">
          <div class=" ">
            <div class="card shadow mb-3 mx-auto" style="max-width: 580px;">
              <div class="row g-0">
                <div class="col-md-5">
                  <img src="https://register.wyfegypt.com/images/form-wizard-login.jpg" class="img-fluid rounded-start"
                    alt="..." />
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h5 class="card-title text-center fs-4 "><span class="text-primary">Login</span></h5>
                    <hr class="mx-auto text-black" style="width: 40px; ">
                    <form action="/login" method="post">
                      <input type="email" class="form-control mt-2" placeholder="Email" name="email" required>
                      <input type="password" class="form-control mt-2" placeholder="Password" name="password" required>
                      
                      <button class="btn btn-primary w-100 mt-3" type="submit">Sign In</button>
                      <br>
                      <label class="checkbox pull-left mt-3">
                        <input type="checkbox" value="remember-me"> Remember me
                      </label>
                      <a href="#" class="pull-right need-help ms-5">Need help?</a>
                      <br>
                      <a class=" " href="/forget">Forgot Password</a>



                    </form>

                  
                    <div class="help mt-2">
                      <a class="" href="/register"> <span class="text-black">New User Please: </span> Sign in</a>

                    </div>



                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>